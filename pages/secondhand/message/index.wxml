<!--pages/secondhand/message/index.wxml-->
<cu-custom bgColor="bg-gradual-blue">
  <view slot="content">消息</view>
</cu-custom>


<view class="cu-list menu">
  <view class="padding-sm bg-white ">
    <view class="content justify-between align-center flex">
      <view class="action ">
        <text class="text-grey text-sm "> 开启新消息将可以及时收到消息通知</text>
      </view>
      <view class='action'>
        <button class='cu-btn sm bg-gradual-blue shadow-blur round'>开启</button>
      </view>
    </view>
  </view>
</view>

<view>
  <view class="cu-list menu-avatar shadow">
    <view class="cu-item padding solids-top ">
      <view class="cu-avatar radius lg" style="background-image:url(http://img5.imgtn.bdimg.com/it/u=2777445484,1123291183&fm=26&gp=0.jpg);"></view>
      <view class="content">
        <view class="text-black margin-left">二手市场小秘书</view>
      </view>
    </view>
  </view>
</view>



<scroll-view>
  <view class="cu-list menu-avatar">
    <view class="cu-item padding shadow solids-top {{modalName=='move-box-'+ index?'move-cur':''}}" wx:for="{{4}}" wx:key bindtouchstart="ListTouchStart" bindtouchmove="ListTouchMove" bindtouchend="ListTouchEnd" data-target="move-box-{{index}}">
      <view class="cu-avatar radius lg" style="background-image:url(http://img0.imgtn.bdimg.com/it/u=1362926960,253744480&fm=26&gp=0.jpg);"></view>
      <view class="content">
        <view class="text-black">XXX</view>
        <view class="text-gray text-sm">
          <text class="icon-infofill text-red"></text> 消息未送达</view>
      </view>
      <view class="action">
        <view class="text-grey text-xs">22:20</view>
        <view class="cu-tag round bg-grey sm">5</view>
      </view>
      <view class="move">
        <view class="bg-grey">置顶</view>
        <view class="bg-red">删除</view>
      </view>
    </view>
  </view>
</scroll-view>

<view class="padding flex align-center">
  <view class="flex-sub text-center">
    <view class=" text-xsl padding">
      <text class=" icon-mail text-gray"></text>
    </view>
    <view class="padding text-gray">{{"你还收到任何消息哦>. "}}
    </view>
  </view>
</view>